

<div class="  row m-5 gap-5 ">
{{#each products}}

<div class="border border-dark gap-1 card">
    <h2 class="text-center">{{nombre}}</h2>
    <img src={{thumbnails}} alt="productImage">
    <p class="text-center">${{precio}}</p>
    <p class="text-center">Dias:{{dias}}</p>
    <p class="text-center">Destino:{{destino}}</p>
    <p class="text-center">Cantidad de personas:{{cantidad_personas}}</p>
    <button class="border-black  " id="boton-comprar" data-id="{{id}}">AGREGAR AL CARRITO</button>
</div>

{{/each}}
</div>


<style>
.card{
    background-color: yellow;
    width: 300px;
    height: 600px;
   object-fit: contain;
}
button{
    background-color:  lightgreen;
    border-radius: 5px;
}
img{
    border: 2px solid black;
}
</style>
